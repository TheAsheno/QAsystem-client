/* pages/favorite/favorite.wxss */
page {
  background-color: #f5f5f5;
}
.v1 {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.favorite-list {
  flex: 1;
  padding: 20rpx;
  width: 90%;
}
.question-item {
  display: flex;
  flex-direction: column;
  gap: 5px;
  padding: 30rpx;
  margin-top: 20px;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}
.question-course {
  font-size: 12px;
  color: #999;
  margin-top: 5rpx;
  word-break: normal;
}
.question-title {
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  font-weight: bold;
}
.question-content {
  font-size: 12px;
  word-break: break-all;
  color: #999;
  display: -webkit-box; 
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis; 
}
.car-dot {
  font-size: 20rpx;
  margin-right: 10rpx;
  padding: 2rpx 5rpx;
}
.question-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 10px;
}
.question-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 5px;
  margin-left: 10px;
}
.tag-item {
  background-color: #f1f1f1;
  padding: 5px 10px;
  font-size: 10px;
  color: #888888;
}
.question-btn {
  display: flex;
  gap: 10px;
}
.btn-1 {
  width: 50px;
  height: 25px;
  font-size: 26rpx;
  text-align: center;
  line-height: 25px;
  border-radius: 8rpx;
}
.delete-btn {
  background-color: #ff4444;
  color: white;
}